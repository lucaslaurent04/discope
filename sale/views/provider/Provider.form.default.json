{
    "name": "Provider",
    "description": "Basic form for displaying a Provider",
    "access": {
        "groups": ["booking.default.user", "sale.default.user"]
     },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Partner identity",
                                                "value": "partner_identity_id",
                                                "width": "80%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Owner identity",
                                                "value": "owner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "relationship",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Target organisation",
                                                "value": "partner_organisation_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "partner_position",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.booking-lines",
                        "label": "Booking lines",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "booking_lines_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.ADD": false,
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.consumptions",
                        "label": "Consommations",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "consumptions_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.ADD": false,
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}