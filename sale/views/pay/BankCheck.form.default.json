{
    "name": "BankCheck",
    "description": "",
    "access": {
        "groups": ["sale.default.user"]
    },
    "actions": [
        {
            "id": "action.transition.add.payment",
            "label": "Add Payment",
            "controller": "sale_pay_bankcheck_do-pay",
            "access": {
                "groups": ["booking.default.user", "finance.default.administrator", "finance.default.user"]
            },
            "visible": [
                ["status", "=", "pending"]
            ]
        },
        {
            "id": "action.transition.remove.payment",
            "label": "Remove Payment",
            "controller": "sale_pay_bankcheck_remove-pay",
            "access": {
                "groups": ["booking.default.user", "finance.default.administrator", "finance.default.user"]
            },
            "visible": ["status", "=", "paid"]
        },
        {
            "id": "action.transition.delete",
            "label": "Delete Bank Check",
            "controller": "sale_pay_bankcheck_remove-bank-check",
            "access": {
                "groups": ["booking.default.user", "finance.default.administrator", "finance.default.user"]
            },
            "visible": ["state", "<>", "draft"]
        },
        {
            "id": "action.transition.reject",
            "label": "Reject",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\pay\\BankCheck",
                "transition": "reject",
                "ids": []
            },
            "visible": [
                ["status", "<>", "rejected"],
                ["status", "<>", "paid"]
            ]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "bank_check_number",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "emission_date",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "amount",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "deposit_number",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_signature",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "bank_check_description",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "funding_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "enrollment_id",
                                                "width": "50%",
                                                "readonly": true,
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "payment_id",
                                                "width": "50%",
                                                "readonly": true,
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_voucher",
                                                "width": "50%",
                                                "sortable": true
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
