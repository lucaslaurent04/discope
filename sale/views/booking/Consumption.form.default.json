{
    "name": "Consumption",
    "description": "A Consumption is a service delivery that can be scheduled and is related to a booking.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "routes": [
        {
            "id": "item.consumption.booking.file",
            "label": "Fiche de réservation",
            "description": "",
            "icon": "library_books",
            "route": "/booking/object.booking_id",
            "context": {
                "entity": "sale\\booking\\Booking",
                "view": "form.default"
            }
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Product",
                                                "value": "product_model_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "disclaimed",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Rental Unit ?",
                                                "value": "is_rental_unit",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Rental Unit",
                                                "value": "rental_unit_id",
                                                "width": "50%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false  
                                                        }  
                                                    }
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Accomodation ?",
                                                "value": "is_accomodation",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_activity",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_staff_required",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_provider",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "value",
                                                "value": "",
                                                "width": "66%",
                                                "visible": ["has_provider", "=", true]
                                            },
                                            {
                                                "type": "field",
                                                "value": "activity_provider_id",
                                                "width": "33%",
                                                "visible": ["has_provider", "=", true]
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Booking",
                                                "value": "booking_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "time_slot_id",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "schedule_from",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "schedule_to",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "qty",
                                                "width": "25%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.description",
                        "label": "Description",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.employees",
                        "label": "Employés responsables",
                        "visible": ["has_staff_required", "=", true],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "employees_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
