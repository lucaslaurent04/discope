{
    "name": "Enrollment",
    "description": "Form view for Enrollment.",
    "routes": [
        {
            "id": "item.preregistration.send",
            "label": "Envoi pré-inscription",
            "description": "Envoyer la confirmation de pré-inscription.",
            "icon": "email",
            "route": "/child/object.child_id/preregistration",
            "visible": ["status", "=", "confirmed"]
        },
        {
            "id": "item.preregistration-reminder.send",
            "label": "Relance pré-inscription",
            "description": "Envoyer la relance de demande de documents manquant pour l'inscription.",
            "icon": "email",
            "route": "/child/object.child_id/preregistration-reminder",
            "visible": [
                ["status", "=", "confirmed"],
                ["preregistration_sent", "=", true]
            ]
        },
        {
            "id": "item.confirmation.send",
            "label": "Envoi confirmation",
            "description": "Envoyer la confirmation d'inscription.",
            "icon": "email",
            "route": "/enrollment/object.id/confirmation",
            "visible": ["status", "=", "validated"]
        }
    ],
    "header": {
        "actions": {
            "ACTION.SAVE": [
                { "id": "SAVE_AND_CONTINUE" },
                { "id": "SAVE_AND_VIEW" }
            ]
        }
    },
    "actions": [
        {
            "id": "action.confirm",
            "label": "Confirm",
            "controller": "sale_camp_enrollment_confirm",
            "visible": [
                ["status", "in", ["pending", "waitlisted"]],
                ["state", "<>", "draft"]
            ]
        },
        {
            "id": "action.unconfirm",
            "label": "Unconfirm",
            "controller": "sale_camp_enrollment_unconfirm",
            "confirm": true,
            "visible": [
                ["status", "=", "confirmed"],
                ["state", "<>", "draft"]
            ]
        },
        {
            "id": "action.validate",
            "label": "Validate",
            "controller": "sale_camp_enrollment_validate",
            "visible": [
                ["status", "=", "confirmed"],
                ["state", "<>", "draft"]
            ]
        },
        {
            "id": "action.cancel",
            "label": "Cancel",
            "controller": "sale_camp_enrollment_cancel",
            "confirm": true,
            "visible": [
                ["status", "in", ["waitlisted", "pending", "confirmed", "validated"]],
                ["state", "<>", "draft"]
            ]
        },
        {
            "id": "action.transfer",
            "label": "Transfer",
            "controller": "sale_camp_transfer-enrollment",
            "visible": [
                ["status", "<>", "cancelled"],
                ["state", "<>", "draft"]
            ]
        },
        {
            "id": "action.pay_instant",
            "label": "Instant payment",
            "description": "This will complete the fundings with a manual payment (card) and fundings will be marked as paid.",
            "controller": "sale_camp_enrollment_do-pay-instant",
            "confirm": true,
            "visible": ["status", "=", "confirmed"]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "child_id",
                                                "width": "40%",
                                                "widget": {
                                                    "limit": 25,
                                                    "sort": "asc",
                                                    "order": "name"
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "camp_id",
                                                "width": "60%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "main_guardian_id",
                                                "width": "33%",
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "child_age",
                                                "width": "33%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_ase",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "33%",
                                                "visible": ["state", "=", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "33%",
                                                "readonly": true,
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "33%",
                                                "readonly":  true,
                                                "visible": ["state", "<>", "draft"]
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "33%",
                                                "visible": [
                                                    ["child_id", "<>", null],
                                                    ["camp_id", "<>", null]
                                                ]
                                            },
                                            {
                                                "type": "field",
                                                "value": "camp_class",
                                                "width": "33%",
                                                "visible": [
                                                    ["child_id", "<>", null],
                                                    ["camp_id", "<>", null]
                                                ]
                                            },
                                            {
                                                "type": "field",
                                                "value": "works_council_id",
                                                "width": "33%",
                                                "visible": [
                                                    ["child_id", "<>", null],
                                                    ["camp_id", "<>", null],
                                                    ["is_clsh", "=", false]
                                                ]
                                            },
                                            {
                                                "type": "field",
                                                "value": "family_quotient",
                                                "width": "33%",
                                                "visible": [
                                                    ["child_id", "<>", null],
                                                    ["camp_id", "<>", null],
                                                    ["is_clsh", "=", true]
                                                ]
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%",
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "total",
                                                "width": "25%",
                                                "visible": false
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "25%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "price",
                                                "width": "25%",
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "75%",
                                                "visible": ["state", "=", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "25%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "payment_status",
                                                "width": "25%",
                                                "visible": false
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%",
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "payment_reference",
                                                "width": "25%",
                                                "visible": ["state", "<>", "draft"],
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "paid_amount",
                                                "width": "25%",
                                                "visible": ["state", "<>", "draft"],
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "all_documents_received",
                                                "width": "50%",
                                                "visible": false
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "33%",
                                                "visible": ["status", "=", "cancelled"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "cancellation_date",
                                                "width": "33%",
                                                "visible": ["status", "=", "cancelled"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "cancellation_reason",
                                                "width": "33%",
                                                "visible": ["status", "=", "cancelled"]
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "is_clsh",
                                                "width": "33%",
                                                "readonly": true,
                                                "visible": ["is_clsh", "=", true]
                                            },
                                            {
                                                "type": "field",
                                                "value": "clsh_type",
                                                "readonly": true,
                                                "visible": false
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "preregistration_sent",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "confirmation_sent",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "weekend_extra",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "presence_day_1",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "presence_day_2",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "presence_day_3",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "presence_day_4",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "presence_day_5",
                                                "width": "20%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.followup",
                        "label": "Followup",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "tasks_ids",
                                                "width": "66%",
                                                "widget": {
                                                    "view": "list.enrollment",
                                                    "domain": ["visible_date", "<=", "date.this.day.first"]
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.lines",
                        "label": "Lines",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "enrollment_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.reductions",
                        "label": "Reductions",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "price_adapters_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": [{ "visible": ["status", "=", "pending"] }]
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.daycare",
                        "label": "Daycare",
                        "visible": ["is_clsh", "=", true],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "daycare_day_1",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "daycare_day_2",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "daycare_day_3",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "daycare_day_4",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "daycare_day_5",
                                                "width": "20%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.child-remarks",
                        "label": "Child remarks",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "child_remarks",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.documents",
                        "label": "Documents",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "enrollment_documents_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.enrollment"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.mails",
                        "label": "Mails",
                        "visible": [
                            ["status", "in", ["confirmed", "validated", "cancelled"]],
                            ["state", "<>", "draft"]
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "enrollment_mails_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.fundings",
                        "label": "Fundings",
                        "visible": [
                            [
                                ["status", "in", ["confirmed", "validated", "cancelled"]],
                                ["state", "<>", "draft"]
                            ],
                            [
                                ["status", "in", ["pending", "waitlisted"]],
                                ["paid_amount", ">", 0],
                                ["state", "<>", "draft"]
                            ]
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "fundings_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
